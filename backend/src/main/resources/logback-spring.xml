<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Properties -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="userauth-backend"/>
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path" defaultValue="./logs"/>
    <springProperty scope="context" name="LOG_FILE" source="logging.file.name" defaultValue="userauth-backend.log"/>

    <!-- Console Appender for Development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Appender with colored output for development -->
    <appender name="CONSOLE_DEV" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %magenta(%thread) %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender for production -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSZ} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Plain Text File Appender for backup/compatibility -->
    <appender name="FILE_PLAIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}-plain.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}-plain.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSZ} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Async Appender for better performance -->
    <appender name="ASYNC_JSON" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE_JSON"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Async Appender for plain text -->
    <appender name="ASYNC_PLAIN" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE_PLAIN"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Access Log Appender for HTTP requests -->
    <appender name="ACCESS_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/access.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSZ} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger configurations -->
    <!-- Root logger -->
    <root level="INFO">
        <springProfile name="dev">
            <appender-ref ref="CONSOLE_DEV"/>
        </springProfile>
        <springProfile name="light">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <springProfile name="prod">
            <appender-ref ref="ASYNC_JSON"/>
            <appender-ref ref="ASYNC_PLAIN"/>
        </springProfile>
        <springProfile name="test">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
    </root>

    <!-- Application loggers -->
    <logger name="com.example.userauth" level="${LOG_LEVEL_APP:-INFO}" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="CONSOLE_DEV"/>
        </springProfile>
        <springProfile name="light">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <springProfile name="prod">
            <appender-ref ref="ASYNC_JSON"/>
        </springProfile>
    </logger>

    <!-- Security logger -->
    <logger name="com.example.userauth.security" level="INFO" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="CONSOLE_DEV"/>
        </springProfile>
        <springProfile name="light">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <springProfile name="prod">
            <appender-ref ref="ASYNC_JSON"/>
        </springProfile>
    </logger>

    <!-- Authentication events -->
    <logger name="org.springframework.security" level="INFO" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="CONSOLE_DEV"/>
        </springProfile>
        <springProfile name="light">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <springProfile name="prod">
            <appender-ref ref="ASYNC_JSON"/>
        </springProfile>
    </logger>

    <!-- Database/Hibernate -->
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="WARN"/>

    <!-- Spring Framework -->
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security.web.FilterChainProxy" level="DEBUG"/>

    <!-- Performance monitoring -->
    <logger name="com.example.userauth.performance" level="DEBUG" additivity="false"/>

    <!-- Access log (HTTP requests) -->
    <logger name="com.example.userauth.controller" level="INFO" additivity="false">
        <springProfile name="light">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <springProfile name="prod">
            <appender-ref ref="ACCESS_LOG"/>
        </springProfile>
    </logger>

    <!-- Reduce noise from third-party libraries -->
    <logger name="org.apache.catalina" level="INFO"/>
    <logger name="org.apache.http" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="org.thymeleaf" level="INFO"/>
</configuration>
