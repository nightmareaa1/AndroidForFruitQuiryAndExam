# Production Environment Variables Template
# Copy this file to .env.prod and fill in the actual values
# DO NOT commit .env.prod to version control

# =============================================================================
# CRITICAL SECURITY SETTINGS - MUST BE SET IN PRODUCTION
# =============================================================================

# JWT Configuration (REQUIRED)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# SSL/TLS Configuration (REQUIRED for HTTPS)
SSL_ENABLED=true
SSL_KEYSTORE_PATH=/app/ssl/keystore.p12
SSL_KEYSTORE_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
SSL_KEY_ALIAS=userauth

# Database Configuration (REQUIRED)
SPRING_DATASOURCE_URL=jdbc:mysql://your-db-host:3306/userauth_prod
SPRING_DATASOURCE_USERNAME=userauth_prod
SPRING_DATASOURCE_PASSWORD=CHANGE_THIS_TO_A_STRONG_DATABASE_PASSWORD

# Redis Configuration (REQUIRED)
SPRING_REDIS_HOST=your-redis-host
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=CHANGE_THIS_TO_A_STRONG_REDIS_PASSWORD
SPRING_REDIS_SSL=true

# CORS Configuration (REQUIRED)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# SECURITY POLICY SETTINGS
# =============================================================================

# Password Policy (Production Defaults)
BCRYPT_STRENGTH=14
PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# Key Rotation (Optional)
KEY_ROTATION_ENABLED=false
KEY_ROTATION_INTERVAL_HOURS=24

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# File Upload
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE_USERAUTH=INFO
LOGGING_LEVEL_SECURITY=WARN
LOG_FILE=/app/logs/userauth-backend.log

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=never

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Email Configuration (if needed)
# SPRING_MAIL_HOST=smtp.yourdomain.com
# SPRING_MAIL_PORT=587
# SPRING_MAIL_USERNAME=noreply@yourdomain.com
# SPRING_MAIL_PASSWORD=EMAIL_PASSWORD

# External API Keys (if needed)
# EXTERNAL_API_KEY=your-external-api-key

# =============================================================================
# DOCKER SECRETS MAPPING
# =============================================================================
# If using Docker Secrets, create these secret files:
# - jwt_secret -> JWT_SECRET
# - db_password -> SPRING_DATASOURCE_PASSWORD
# - redis_password -> SPRING_REDIS_PASSWORD
# - ssl_keystore_password -> SSL_KEYSTORE_PASSWORD