# Test Environment Variables Template
# Copy this file to .env.test and fill in the actual values

# =============================================================================
# TEST ENVIRONMENT SETTINGS
# =============================================================================

# JWT Configuration (Test values)
JWT_SECRET=test-jwt-secret-for-testing-only-not-for-production-use
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=86400000

# SSL Configuration (Disabled for testing)
SSL_ENABLED=false

# Database Configuration (Test database)
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/userauth_test
SPRING_DATASOURCE_USERNAME=userauth_test
SPRING_DATASOURCE_PASSWORD=test_password

# Redis Configuration (Test instance)
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=
SPRING_REDIS_SSL=false

# CORS Configuration (Permissive for testing)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# SECURITY POLICY SETTINGS (Relaxed for testing)
# =============================================================================

# Password Policy (Test defaults)
BCRYPT_STRENGTH=4
PASSWORD_MIN_LENGTH=6
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_DIGIT=false
PASSWORD_REQUIRE_SPECIAL=false

# Key Rotation (Disabled for testing)
KEY_ROTATION_ENABLED=false

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=test

# File Upload
UPLOAD_PATH=./test-uploads
MAX_FILE_SIZE=5MB
MAX_REQUEST_SIZE=5MB

# Logging (More verbose for testing)
LOGGING_LEVEL_ROOT=DEBUG
LOGGING_LEVEL_COM_EXAMPLE_USERAUTH=DEBUG
LOGGING_LEVEL_SECURITY=DEBUG
LOG_FILE=./logs/userauth-test.log

# =============================================================================
# TEST-SPECIFIC SETTINGS
# =============================================================================

# TestContainers (if using)
TESTCONTAINERS_REUSE_ENABLE=true

# Test data
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=admin123
TEST_USER_USERNAME=testuser
TEST_USER_PASSWORD=testpass123