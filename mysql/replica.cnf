# MySQL Replica Configuration
# Read-only replica for replication setup

[mysqld]
# Server ID (must be unique in replication group)
server-id=2

# Read-only mode (prevents writes on replica)
read_only=ON
super_read_only=ON

# Binary logging (for potential cascading replication)
log-bin=mysql-bin
binlog-format=ROW
binlog-row-image=FULL
max-binlog-size=100M
binlog-expire-logs-seconds=604800
log_slave_updates=ON

# GTID-based replication
gtid-mode=ON
enforce-gtid-consistency=ON

# Relay log
relay_log=relay-bin
relay_log_recovery=ON
relay_log_purge=ON

# InnoDB settings for performance (can be smaller than primary)
innodb_flush_log_at_trx_commit=2
innodb_flush_method=O_DIRECT
innodb_file_per_table=ON
innodb_log_buffer_size=64M
innodb_log_file_size=512M
innodb_buffer_pool_size=1G
innodb_buffer_pool_instances=4
innodb_io_capacity=2000
innodb_io_capacity_max=4000
innodb_read_io_threads=8
innodb_write_io_threads=8
innodb_thread_concurrency=0

# Connection settings
max_connections=200
max_connect_errors=100000
wait_timeout=28800
interactive_timeout=28800

# Character set and collation
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# Time zone
default_time_zone=UTC

# Security
local_infile=OFF
symbolic-links=0

# Logging
log_error=/var/log/mysql/error.log
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow.log
long_query_time=2
log_queries_not_using_indexes=ON
